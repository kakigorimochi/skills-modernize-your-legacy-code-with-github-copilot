{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Accounting App",
      "program": "${workspaceFolder}/src/accounting/index.js",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Mocha Tests",
      "program": "${workspaceFolder}/src/accounting/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceFolder}/src/accounting/test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
